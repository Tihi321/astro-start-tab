---
import Menu from "./Menu.astro";
---

<script>
  import { get } from "lodash-es";
  import { getRandomQuote, getRandomWord } from "../utils/random";
  document.addEventListener("DOMContentLoaded", () => {
    const openMenu = document.getElementById("open-menu");
    const playMusic = document.getElementById("play-music");
    const stopMusic = document.getElementById("stop-music");

    playMusic?.addEventListener("click", () => {
      document.dispatchEvent(new CustomEvent("preset:load"));
    });

    stopMusic?.addEventListener("click", () => {
      document.dispatchEvent(new CustomEvent("preset:stop"));
    });

    document.addEventListener("keydown", function (event) {
      if (event.ctrlKey && (event.key === "m" || event.key === "M")) {
        const menuContainer = document.querySelector(".menu-container");
        if (menuContainer?.classList.contains("show")) {
          document.body.classList.remove("overflow");
          menuContainer?.classList.remove("show");
        } else {
          document.body.classList.add("overflow");
          menuContainer?.classList.add("show");
        }
      }

      if (event.ctrlKey && event.code === "Comma") {
        console.log("toggle preset");
        document.dispatchEvent(new CustomEvent("preset:toggle"));
      }
    });

    openMenu?.addEventListener("click", () => {
      const menuContainer = document.querySelector(".menu-container");
      document.body.classList.add("overflow");
      menuContainer?.classList.add("show");
    });

    getRandomQuote().then((quote) => {
      document.getElementById("quote")?.insertAdjacentText("beforeend", get(quote, ["text"], ""));
      document
        .getElementById("author")
        ?.insertAdjacentText("beforeend", get(quote, ["author"], ""));
    });

    getRandomWord().then((word) => {
      document.getElementById("word")?.insertAdjacentText("beforeend", get(word, ["name"], ""));
      document
        .getElementById("meaning")
        ?.insertAdjacentText("beforeend", get(word, ["meaning"], ""));
    });
  });
</script>

<Menu />
<header>
  <div class="menu">
    <button class="open-menu" id="open-menu"
      ><svg
        class="cog-icon svelte-eyvwnt"
        width="38"
        height="38"
        viewBox="0 0 38 38"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
